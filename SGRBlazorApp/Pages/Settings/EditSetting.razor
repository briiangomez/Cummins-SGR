    private async Task SaveSetting()
    {
        try
        {
            if (Setting.Id == Guid.Empty)
                await bookStoresService.SaveAsync("Settings/CreateSettings", Setting);
            else
                await bookStoresService.UpdateAsync("Settings/UpdateSettings/", Setting.Id, Setting);


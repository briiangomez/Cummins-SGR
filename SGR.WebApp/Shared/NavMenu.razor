<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">TheaBot </a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <AuthorizeView>
        <Authorized>
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="index">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="eventos">
                        <span class="oi oi-bell" aria-hidden="true"></span> Eventos
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="camaras">
                        <span class="oi oi-camera-slr" aria-hidden="true"></span> Camaras
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="camaras-vivo">
                        <span class="oi oi-video" aria-hidden="true"></span> Camaras en Vivo
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="productos" Match="NavLinkMatch.All">
                        <span class="oi oi-wrench" aria-hidden="true"></span> Productos
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="usuarios" Match="NavLinkMatch.All">
                        <span class="oi oi-people" aria-hidden="true"></span> Usuarios
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="settings" Match="NavLinkMatch.All">
                        <span class="oi oi-cog" aria-hidden="true"></span> Configuracion
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="reportes">
                        <span class="oi oi-pie-chart" aria-hidden="true"></span> Reportes
                    </NavLink>
                </li>
            </ul>
        </Authorized>
    </AuthorizeView>    
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

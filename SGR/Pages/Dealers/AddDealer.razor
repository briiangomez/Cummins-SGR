    }

    protected async Task CreateArticle()
    {

        Guid id = await dealerManager.InsertAsync(article);
        navigationManager.NavigateTo("/dealerlist");
    }

    void Cancel()
    {
        navigationManager.NavigateTo("/dealerlist");
    }
}